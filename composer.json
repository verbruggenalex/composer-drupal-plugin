{
  "name": "verbruggenalex/composer-drupal-plugin",
  "description": "Composer Drupal Plugin",
  "authors": [
    {
      "name": "Alex Verbruggen",
      "email": "verbruggenalex@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "cweagans/composer-patches": "^1.6",
    "phptaskman/drupal": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "VerbruggenAlex\\ComposerDrupalPlugin\\": "src/"
    }
  },
  "extra": {
    "patches": {
      "phptaskman/core": [
        "https://patch-diff.githubusercontent.com/raw/php-taskman/core/pull/16.patch"
      ]
    }
  },
  "config": {
    "sort-packages": true
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5"
  }
}
