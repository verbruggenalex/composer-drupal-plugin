{
    "name": "verbruggenalex/composer-drupal-plugin",
    "description": "Composer Drupal Plugin",
    "type": "project",
    "authors": [
        {
            "name": "Alex Verbruggen",
            "email": "verbruggenalex@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "composer-plugin-api": "^1.1",
        "phptaskman/drupal": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "VerbruggenAlex\\ComposerDrupalPlugin\\": "src/"
        }
    },
    "extra": {
        "class": "VerbruggenAlex\\ComposerDrupalPlugin\\Plugin",
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "drupal-scaffold": {
            "allowed-packages": [
                "drupal/core"
            ],
            "locations": {
                "web-root": "./web"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/sites/{$name}": [
                "type:drupal-drupal-multisite"
            ],
            "vendor/drupal/console/{$name}": [
                "type:drupal-console"
            ],
            "vendor/drupal/console/language/{$name}": [
                "type:drupal-console-language"
            ],
            "config/{$name}/sync": [
                "type:drupal-config"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "conflict": {
        "drupal/drupal": "*"
    }
}