{
  "name": "verbruggenalex/robo-drupal",
  "description": "Robo Drupal",
  "type": "robo-tasks",
  "authors": [
    {
      "name": "Alex Verbruggen",
      "email": "verbruggenalex@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "consolidation/robo": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "VerbruggenAlex\\RoboDrupal\\": "src/"
    }
  },
  "extra": {
    "patches": {
      "phptaskman/core": [
        "https://patch-diff.githubusercontent.com/raw/php-taskman/core/pull/16.patch"
      ]
    }
  },
  "config": {
    "sort-packages": true
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5"
  }
}
